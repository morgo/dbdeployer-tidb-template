#!/bin/bash
{{.Copyright}}
# Generated by dbdeployer {{.AppVersion}} using {{.TemplateName}} on {{.DateTime}}
source {{.SandboxDir}}/sb_include
[ -z "$MYSQL_SHELL" ] && MYSQL_SHELL="{{.MysqlShell}}"

[ -z "$URI" ] && URI="root:{{.DbPassword}}@127.0.0.1:{{.MysqlXPort}}"

if [ -f $PIDFILE ]
then
    if [ "$1" != "" ]
	then
	    $MYSQL_SHELL --uri="$URI" "$*"
	else
	    $MYSQL_SHELL --uri="$URI"
	fi
else
	echo "# $0 pidfile not found"
	exit 1
fi
